---
import { getCollection } from 'astro:content';

// Get profile data for contact information
const profileEntries = await getCollection('profile');
const profile = profileEntries[0]?.data;

// Social media platform configurations with branded colors and icons
const socialPlatforms = {
  github: {
    name: 'GitHub',
    icon: 'github',
    color: 'hover:bg-gray-900 hover:text-white dark:hover:bg-white dark:hover:text-gray-900',
    url: (username: string) => `https://github.com/${username}`,
  },
  linkedin: {
    name: 'LinkedIn',
    icon: 'linkedin',
    color: 'hover:bg-blue-600 hover:text-white dark:hover:bg-blue-600 dark:hover:text-white',
    url: (username: string) => `https://linkedin.com/in/${username}`,
  },
  twitter: {
    name: 'Twitter',
    icon: 'twitter',
    color: 'hover:bg-blue-400 hover:text-white dark:hover:bg-blue-400 dark:hover:text-white',
    url: (username: string) => `https://twitter.com/${username}`,
  },
  scholar: {
    name: 'Google Scholar',
    icon: 'scholar',
    color: 'hover:bg-blue-500 hover:text-white dark:hover:bg-blue-500 dark:hover:text-white',
    url: (id: string) => `https://scholar.google.com/citations?user=${id}`,
  },
};

// Filter available social links
const availableSocial = profile?.social ? Object.entries(profile.social)
  .filter(([_, value]) => value)
  .map(([platform, username]) => ({
    platform: platform as keyof typeof socialPlatforms,
    username: username as string,
    config: socialPlatforms[platform as keyof typeof socialPlatforms],
  })) : [];
---

<section id="contact" class="py-8 md:py-12 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 md:px-6 max-w-4xl">
    <!-- Section Header -->
    <div class="text-center mb-6">
      <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white mb-2">
        Contact
      </h2>
      <p class="text-sm text-gray-600 dark:text-gray-300 max-w-xl mx-auto">
        Open to discussing opportunities, collaborations, and AI/ML projects
      </p>
    </div>

    <div class="max-w-3xl mx-auto">
      <!-- Email Contact -->
      {profile?.email && (
        <div class="text-center mb-6">
          <a 
            href={`mailto:${profile.email}`}
            class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            {profile.email}
          </a>
        </div>
      )}

      <!-- Social Media Grid -->
      {availableSocial.length > 0 && (
        <div>
          <div class="flex flex-wrap justify-center gap-3">
            {availableSocial.map((social, index) => (
              <a
                href={social.config.url(social.username)}
                target="_blank"
                rel="noopener noreferrer"
                class={`social-link group flex items-center gap-2 px-3 py-2 bg-gray-50 dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 ${social.config.color} text-sm`}
                style="transition: all 0.2s ease !important;"
                style={`animation-delay: ${index * 100}ms`}
              >
                <!-- Social Icon -->
                <div class="w-4 h-4 flex items-center justify-center">
                  {social.platform === 'github' && (
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  )}
                  {social.platform === 'linkedin' && (
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  )}
                  {social.platform === 'twitter' && (
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  )}
                  {social.platform === 'scholar' && (
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
                    </svg>
                  )}
                </div>
                
                <!-- Platform Name -->
                <span class="font-medium text-gray-700 dark:text-gray-300 group-hover:text-inherit" style="transition: color 0.2s ease !important;">
                  {social.config.name}
                </span>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Additional Contact Info -->
      <div class="mt-4 text-center">
        {profile?.location && (
          <div class="inline-flex items-center gap-1 text-xs text-gray-600 dark:text-gray-400">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>Based in {profile.location}</span>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .social-link {
    /* Removed animations for faster response times */
    opacity: 1;
    transform: none;
  }

  .social-link:hover {
    /* Ensure hover effects work despite global CSS optimizations */
    transform: translateY(-2px) !important;
    transition: all 0.2s ease !important;
  }

  /* Force hover color changes to work */
  .social-link:hover * {
    transition: color 0.2s ease !important;
  }
</style>